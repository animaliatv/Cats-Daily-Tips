<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:drawable="@color/animaliaBlue"/>


    <item
        android:left="90dp"
        android:top="60dp"
        android:bottom="20dp"
        android:gravity="bottom">
        <bitmap
            android:gravity="right"
            android:src="@drawable/paw1"
            android:tileMode="disabled"/>
    </item>
    <item
        android:left="10dp"
        android:right="10dp"
        android:top="50dp"
        android:bottom="50dp"
        android:gravity="bottom">
        <bitmap
            android:gravity="bottom"
            android:src="@drawable/splash_animalia_cat"
            android:tileMode="disabled"/>
    </item>

    <item
        android:top="40dp"
        android:bottom="50dp"
        android:gravity="top">

        <bitmap
            android:gravity="center"
            android:src="@drawable/cat_no_shadow"
            android:tileMode="disabled"/>
    </item>

</layer-list>